<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="411dp"
        android:layout_height="595dp"
        android:layout_marginTop="4dp"
        android:paddingTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">


        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="570dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Button

                android:id="@+id/button"
                android:layout_width="438dp"
                android:layout_height="237dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/calco"
                android:paddingTop="40dp"
                android:paddingRight="100dp"
                android:text="Calculater"
                android:textColor="#FFFFFF"
                android:textSize="50dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/calculater"
                android:layout_width="408dp"
                android:layout_height="237dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/trackicon"
                android:paddingTop="40dp"
                android:paddingRight="260dp"
                android:text="map"
                android:textColor="#FFFFFF"
                android:textSize="50dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/StudyPlaneb"
                android:layout_width="408dp"
                android:layout_height="200dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/studenticon"
                android:paddingTop="20dp"
                android:paddingRight="90dp"
                android:text="Study Plan"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/college"
                android:layout_width="408dp"
                android:layout_height="200dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/buldingico"
                android:paddingTop="50dp"
                android:paddingRight="110sp"
                android:text="Information Collages"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button8"
                android:layout_width="408dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/contact"
                android:paddingTop="15dp"
                android:paddingRight="140dp"
                android:text="Contact Us"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="175dp"
        android:layout_height="63dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="#00000000"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="Home"
        android:textColor="#689AEF"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button25"
        android:layout_width="258dp"
        android:layout_height="120dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/btnloging"
        android:paddingLeft="50dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button26"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/button26"
        android:layout_width="258dp"
        android:layout_height="120dp"
        android:layout_marginStart="212dp"
        android:background="@drawable/signupg"
        android:paddingRight="50dp"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.110000014" />


</androidx.constraintlayout.widget.ConstraintLayout>